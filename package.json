{
  "name": "ringcentral-extensible",
  "private": "true",
  "license": "MIT",
  "description": "RingCentral Extensible SDK",
  "scripts": {
    "generate": "lerna run generate --scope=@rc-ex/core && eslint . --fix",
    "upgrade-all": "yarn-upgrade-all -W && yarn workspaces run yarn-upgrade-all && yarn install && yarn reset",
    "reset": "lerna exec 'rm -rf lib'",
    "test": "lerna exec 'yarn jest -w 1 --detectOpenHandles -c jest.config.ts $t' --scope=@rc-ex/test",
    "compile": "lerna exec tsc --scope=@rc-ex/core && lerna exec tsc --no-private --ignore=@rc-ex/core",
    "prepublishOnly": "yarn reset && yarn compile"
  },
  "devDependencies": {
    "@types/node": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "gts": "^3.1.0",
    "lerna": "^4.0.0",
    "typescript": "^4.6.3",
    "yarn-upgrade-all": "^0.7.1"
  },
  "workspaces": [
    "packages/core",
    "packages/extensions/*",
    "test"
  ]
}
